name = input('Твоё имя: ')
height = float(input("Введи свой рост(см): "))
weight = float(input('Введи свой вес(кг): '))
IMT = weight / height ** 2 * 10000
print('Индекс массы тела:', IMT)
if IMT < 19:
    print('ИМТ:', IMT, 'Нужно больше жрать!')
elif IMT >= 19 and IMT <25:
    print('И так,',name,', твой ИМТ:', round(IMT), '- У тебя все заебок!')
elif IMT >=25 and IMT <29:
    print('И так, ',name,', ИМТ:', round(IMT), '- Ты слишком много жрешь!')
elif IMT >= 29:
    print(name,', ИМТ:', round(IMT), ', Вы - жиробасина!')

input()

# подсчет слов
sentence = input("Enter a sentence: ")

word_count = {}
for word in sentence.split():
    if word in word_count:
        word_count[word] += 1
    else:
        word_count[word] = 1

num_unique_words = len(word_count)

most_frequent_word = ""
max_count = 0
for word, count in word_count.items():
    if count > max_count:
        most_frequent_word = word
        max_count = count

print("The sentence contains", num_unique_words, "unique words.")
print("The most frequent word is:", most_frequent_word, 'встречается', max_count, 'раз')
